<Window x:Class="lombard.Empty_favourites"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lombard"
        mc:Ignorable="d"
        Title="Empty_favourites" Height="450" Width="800">
    <Grid Background="#FFF7F2F0">
        <Rectangle HorizontalAlignment="Center" Height="44                    " VerticalAlignment="Top" Width="800" Fill="#FF707B6D"/>
        <Label Content="Бриллиантовый дом" HorizontalAlignment="Left" Margin="94,4,0,0" VerticalAlignment="Top" FontSize="26" FontFamily="Bahnschrift" Foreground="#FFF7F2F0"/>
        <Button Content="" HorizontalAlignment="Left" Height="28" Margin="34,8,0,0" VerticalAlignment="Top" Width="29" BorderBrush="#FF707B6D" Foreground="#FF707B6D">
            <Button.Background>
                <ImageBrush ImageSource="/meteor-icons_list.png"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Height="30" Margin="730,6,0,0" VerticalAlignment="Top" Width="29" BorderBrush="#FF707B6D" Foreground="#FF707B6D" Click="Button_Click_1">
            <Button.Background>
                <ImageBrush ImageSource="/gg_profile.png"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Height="35" Margin="43,61,0,0" VerticalAlignment="Top" Width="20" BorderBrush="#FFF7F2F0" Click="Button_Click_2">
            <Button.Background>
                <ImageBrush ImageSource="/weui_arrow-filled.png"/>
            </Button.Background>
        </Button>
        <Label Content="Избранное" HorizontalAlignment="Left" Margin="68,62,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="20" Foreground="#FF262D24"/>
        <Button Content="Добавить в корзину" HorizontalAlignment="Left" Height="41" Margin="68,369,0,0" VerticalAlignment="Top" Width="165" Click="Button_Click" FontFamily="Bahnschrift" Foreground="#FFF7F2F0" BorderBrush="{x:Null}" FontSize="13">
            <Button.Background>
                <SolidColorBrush Color="#FF707B6D" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <Button Content="" HorizontalAlignment="Left" Height="41" Margin="272,369,0,0" VerticalAlignment="Top" Width="42" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/Group 10 (1).png" Opacity="0.5"/>
            </Button.Background>
        </Button>
        <ComboBox x:Name="CityComboBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Margin="493,11,0,0" >
            <ComboBoxItem Content="Москва"/>
            <ComboBoxItem Content="Санкт-Петербург"/>
            <ComboBoxItem Content="Екатеринбург"/>
            <ComboBoxItem Content="Новосибирск"/>
        </ComboBox>
        <Label Content="В избранном пусто" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Bahnschrift" FontSize="36">
            <Label.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.35"/>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
