<Window x:Class="lombard.Registration2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lombard"
        mc:Ignorable="d"
        Title="Registration2" Height="450" Width="800">
    <Grid Background="#FFF7F2F0">
        <Label Content="Регистрация" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="22" Foreground="#FF262D24"/>
        <Button Content="" HorizontalAlignment="Left" Height="31" Margin="588,40,0,0" VerticalAlignment="Top" Width="31" BorderBrush="#FFF7F2F0" RenderTransformOrigin="0.535,1.24" Click="Button_Click_2" >
            <Button.Background>
                <ImageBrush ImageSource="/hugeicons_cancel-circle.png"/>
            </Button.Background>
        </Button>
        <Button Click="MailLoginButton_Click" x:Name="MailLoginButton" Content="Логин" HorizontalAlignment="Left" Margin="234,97,0,0" VerticalAlignment="Top" Height="38" Width="166" BorderBrush="#FFD9D9D9" Foreground="#FF262D24" FontFamily="Bahnschrift">
            <Button.Background>
                <SolidColorBrush Color="#FF707B6D" Opacity="0.35"/>
            </Button.Background>
        </Button>
        <Button x:Name="PhoneButton" Content="Телефон" HorizontalAlignment="Left" Margin="400,97,0,0" VerticalAlignment="Top" Height="38" Width="166" BorderBrush="#FFDDDDDD" Foreground="#FF262D24" FontFamily="Bahnschrift" Click="PhoneButton_Click"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="223,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="26" BorderBrush="#FF707B6D" FontFamily="Bahnschrift">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="1"/>
            </TextBox.Foreground>
        </TextBox>
        <TextBox x:Name="PatronymicTextBox" HorizontalAlignment="Left" Margin="223,218,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="26" BorderBrush="#FF707B6D" FontFamily="Bahnschrift">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="1"/>
            </TextBox.Foreground>
        </TextBox>
        <TextBox x:Name="InputTextBox" HorizontalAlignment="Left" Margin="223,286,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="26" BorderBrush="#FF707B6D" FontFamily="Bahnschrift">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="1"/>
            </TextBox.Foreground>
        </TextBox>
        <TextBox x:Name="SurnameTextBox" HorizontalAlignment="Left" Margin="223,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362" Height="26" BorderBrush="#FF707B6D" FontFamily="Bahnschrift">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="1"/>
            </TextBox.Foreground>
        </TextBox>
        <Label x:Name="InputLabel" Content="Введите логин (email)" HorizontalAlignment="Left" Margin="100,288,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Width="118">
            <Label.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.5"/>
            </Label.Foreground>
        </Label>
        <Label Content="Введите пароль" HorizontalAlignment="Left" Margin="122,322,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift">
            <Label.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.5"/>
            </Label.Foreground>
        </Label>
        <Label x:Name="InputLabel_Копировать" Content="Введите имя" HorizontalAlignment="Left" Margin="137,150,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Width="81">
            <Label.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.5"/>
            </Label.Foreground>
        </Label>
        <Label x:Name="InputLabel_Копировать1" Content="Введите фамилию" HorizontalAlignment="Left" Margin="104,186,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Width="114">
            <Label.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.5"/>
            </Label.Foreground>
        </Label>
        <Label x:Name="InputLabel_Копировать2" Content="Введите отчество" HorizontalAlignment="Left" Margin="104,219,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Width="114">
            <Label.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.5"/>
            </Label.Foreground>
        </Label>
        <DatePicker x:Name="DateOfBirthPicker" HorizontalAlignment="Left" Height="26" Margin="223,252,0,0" VerticalAlignment="Top" Width="177"/>
        <Label x:Name="InputLabel_Копировать3" Content="Укажите дату рождения" HorizontalAlignment="Left" Margin="73,253,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Width="145">
            <Label.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.5"/>
            </Label.Foreground>
        </Label>
        <Button Content="Уже есть аккаунт?" HorizontalAlignment="Center" Height="22" Margin="0,389,0,0" VerticalAlignment="Top" Width="104" Click="Button_Click" Background="#FFF7F2F0" BorderBrush="#FFF7F2F0">
            <Button.Foreground>
                <SolidColorBrush Color="#FF262D24" Opacity="0.7"/>
            </Button.Foreground>
        </Button>
        <Button Content="Продолжить" HorizontalAlignment="Center" Height="32" Margin="0,360,0,0" VerticalAlignment="Top" Width="166" Background="#FF707B6D" Foreground="#FFF7F2F0" BorderBrush="#FF707B6D" FontFamily="Bahnschrift" Click="Button_Click_1" />
        <Label Content="Бриллиантовый дом" HorizontalAlignment="Center" Margin="0,17,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="#FF262D24" FontSize="16"/>
        <Rectangle HorizontalAlignment="Left" Height="18" Margin="482,24,0,0" VerticalAlignment="Top" Width="18" RenderTransformOrigin="0.276,0.518">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/ion_diamond-outline.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <PasswordBox x:Name="PasswordInput" HorizontalAlignment="Left" Margin="223,322,0,0" VerticalAlignment="Top" Width="362" BorderBrush="#FF707B6D" Height="26"/>
    </Grid>
</Window>