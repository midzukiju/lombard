<Window x:Class="lombard.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lombard"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid Background="#FFF7F2F0">
        <Label Content="Бриллиантовый дом" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" Foreground="#FF262D24" FontSize="19"/>
        <Rectangle HorizontalAlignment="Left" Height="21" Margin="497,86,0,0" VerticalAlignment="Top" Width="21" RenderTransformOrigin="0.276,0.518">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/ion_diamond-outline.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Войдите или зарегестрируйтесь" HorizontalAlignment="Center" Margin="0,149,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="22" Foreground="#FF262D24"/>
        <Button Content="" HorizontalAlignment="Left" Height="31" Margin="588,136,0,0" VerticalAlignment="Top" Width="31" BorderBrush="#FFF7F2F0" RenderTransformOrigin="0.535,1.24">
            <Button.Background>
                <ImageBrush ImageSource="/hugeicons_cancel-circle.png"/>
            </Button.Background>
        </Button>
        <Button Content="Почта/Логин" HorizontalAlignment="Left" Margin="234,193,0,0" VerticalAlignment="Top" Height="38" Width="166" BorderBrush="#FFD9D9D9" Foreground="#FF262D24" FontFamily="Bahnschrift"/>
        <Button Content="Телефон" HorizontalAlignment="Left" Margin="400,193,0,0" VerticalAlignment="Top" Height="38" Width="166" BorderBrush="#FFDDDDDD" Foreground="#FF262D24" FontFamily="Bahnschrift"/>
        <TextBox HorizontalAlignment="Left" Margin="223,246,0,0" TextWrapping="Wrap" Text="Введите почту или логин" VerticalAlignment="Top" Width="362" Height="36" BorderBrush="#FF707B6D" FontFamily="Bahnschrift">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF707B6D" Opacity="0.68"/>
            </TextBox.Foreground>
        </TextBox>
        <TextBox HorizontalAlignment="Left" Margin="223,296,0,0" TextWrapping="Wrap" Text="Введите пароль" VerticalAlignment="Top" Width="362" Height="36" BorderBrush="#FF707B6D" FontFamily="Bahnschrift">
            <TextBox.Foreground>
                <SolidColorBrush Color="#FF707B6D" Opacity="0.68"/>
            </TextBox.Foreground>
        </TextBox>
        <Button Content="Продолжить" HorizontalAlignment="Center" Height="32" Margin="0,347,0,0" VerticalAlignment="Top" Width="166" Background="#FF707B6D" Foreground="#FFF7F2F0" BorderBrush="#FF707B6D" FontFamily="Bahnschrift"/>
    </Grid>
</Window>
