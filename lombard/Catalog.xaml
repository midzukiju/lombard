        <Button Content="" HorizontalAlignment="Left" Height="32" Margin="582,150,0,0" VerticalAlignment="Top" Width="30" Click="Button_Click" Foreground="White" BorderBrush="White">
            <Button.Background>
                <ImageBrush ImageSource="/ic_outline-search.png"/>
            </Button.Background>
        </Button>
        <Button Content="Кольца" HorizontalAlignment="Left" Margin="231,197,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.252,-0.699" FontFamily="Bahnschrift" BorderBrush="#FFF7F2F0" Foreground="#FF262D24" Background="#FFF7F2F0"/>
