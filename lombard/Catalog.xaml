        </Button>
        <Button Content="" HorizontalAlignment="Left" Height="36" Margin="729,7,0,0" VerticalAlignment="Top" Width="36" BorderBrush="#FF707B6D" Foreground="#FF707B6D">
            <Button.Background>
                <ImageBrush ImageSource="/gg_profile.png"/>
            </Button.Background>
        </Button>
        <ComboBox HorizontalAlignment="Left" Margin="518,10,0,0" VerticalAlignment="Top" Width="181" Height="30" SelectionChanged="ComboBox_SelectionChanged"/>
        <Button Content="Button" HorizontalAlignment="Left" Height="46" Margin="94,78,0,0" VerticalAlignment="Top" Width="212"/>
        <Button Content="Украшения" HorizontalAlignment="Left" Height="46" Margin="89,78,0,0" VerticalAlignment="Top" Width="212" FontFamily="Bahnschrift" FontSize="16" Foreground="#FF262D24" BorderBrush="#FFDDDDDD"/>
