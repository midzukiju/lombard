        <Label Content="Бренд" HorizontalAlignment="Left" Margin="11,279,0,0" VerticalAlignment="Top" FontSize="10" FontFamily="Bahnschrift"/>
        <Label Content="Размер" HorizontalAlignment="Left" Margin="15,316,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="10"/>
        <Label Content="Тип металлов" HorizontalAlignment="Left" Margin="11,353,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="10"/>
        <Label Content="Тип камня" HorizontalAlignment="Left" Margin="11,386,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift" FontSize="10"/>
        <TextBox HorizontalAlignment="Left" Margin="15,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="53" Height="13"/>
        <TextBox HorizontalAlignment="Left" Margin="92,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Height="13"/>
        <ComboBox HorizontalAlignment="Left" Margin="15,403,0,0" VerticalAlignment="Top" Width="109" Height="15"/>
        <ComboBox HorizontalAlignment="Left" Margin="15,371,0,0" VerticalAlignment="Top" Width="109" Height="15"/>
        <ComboBox HorizontalAlignment="Left" Margin="15,333,0,0" VerticalAlignment="Top" Width="109" Height="15" BorderBrush="White"/>
        <ComboBox HorizontalAlignment="Left" Margin="15,298,0,0" VerticalAlignment="Top" Width="109" Height="15" BorderBrush="White">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>

    </Grid>
</Window>
