<Window x:Class="lombard.Admin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Панель Администратора" Height="447" Width="782"
        MinHeight="450" MinWidth="800">

    <Grid Background="#FFF7F2F0">
        <!-- Верхняя панель -->
        <Grid Height="44" VerticalAlignment="Top" Background="#FF707B6D">
            <TextBlock Text="Админ" HorizontalAlignment="Left" Margin="164,12,0,0" VerticalAlignment="Top"
                       FontFamily="Bahnschrift" FontSize="16" Foreground="#FFF7F2F0"/>

            <Button Content="Добавить" HorizontalAlignment="Left" Height="24" Margin="392,10,0,0" VerticalAlignment="Top" Width="79"
                    Click="AddButton_Click" Background="#FFF7F2F0" BorderBrush="#FF707B6D"/>
            <Button Content="Удалить" HorizontalAlignment="Left" Height="24" Margin="490,10,0,0" VerticalAlignment="Top" Width="79"
                    Click="DeleteButton_Click" Background="#FFF7F2F0" BorderBrush="#FF707B6D"/>
            <Button Command="{Binding CurrentViewModel.SaveCommand}" Content="Сохранить" HorizontalAlignment="Left" Height="24" Margin="585,10,0,0" VerticalAlignment="Top" Width="79"
                    Click="SaveButton_Click" Background="#FFF7F2F0" BorderBrush="#FF707B6D"/>
            <Button Content="Выход" HorizontalAlignment="Left" Height="24" Margin="680,10,0,0" VerticalAlignment="Top" Width="79"
                    Click="ExitButton_Click" Background="#FFF7F2F0" BorderBrush="#FF707B6D"/>
        </Grid>

        <!-- Левое меню -->
        <StackPanel Grid.Column="0" Margin="0,44,700,0">
            <Button x:Name="clientsButton" Content="Клиенты" Height="37" 
            Click="ClientsButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FFAEB7AB" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="EmployeesButton" Content="Сотрудники" Height="37" 
            Click="EmployeesButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="ItemsButton" Content="Товары" Height="37" 
            Click="ItemsButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="RatesButton" Content="Проценты" Height="37" 
            Click="RatesButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="ContractsButton" Content="Контракты" Height="37" 
            Click="ContractsButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="ExtensionsButton" Content="Продление" Height="37" 
            Click="ExtensionsButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="RedemptionsButton" Content="Выкупы" Height="37" 
            Click="RedemptionsButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="PurchasesButton" Content="Покупки" Height="37" 
            Click="PurchasesButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />

            <Button x:Name="SalesButton" Content="Продажи" Height="37" 
            Click="SalesButton_Click"
            Foreground="#FFF7F2F0" BorderBrush="#FFF7F2F0" Background="#FF707B6D" 
            HorizontalContentAlignment="Stretch" />
        </StackPanel>

        <!-- Основная область -->
        <Grid Margin="144,44,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleTextBlock" Text="Клиенты" Grid.Row="0" Margin="10,5,0,5" FontSize="18"/>

            <DataGrid x:Name="MainDataGrid" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False"
                      SelectionMode="Single" SelectionUnit="FullRow"/>
        </Grid>
    </Grid>
</Window>